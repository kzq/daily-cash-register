<div class="app-content content container-fluid">
  <div class="content-wrapper">
    <div class="content-header row">
      <div class="content-header-left col-md-6 col-xs-12 mb-1">
        <h2 class="content-header-title">Cash Register</h2>
      </div>
      <div class="content-header-right breadcrumbs-right breadcrumbs-top col-md-6 col-xs-12">
        <div class="breadcrumb-wrapper col-xs-12">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to 'Home', root_path%>
            </li>
            <li class="breadcrumb-item"><%= link_to 'Cash Register', weekly_sales_path%>
            </li>
          </ol>
        </div>
      </div>
    </div>
    <div class="content-body">
      <section id="basic-listgroup">
        <div class="row match-height">
          <div class="col-lg-12 col-md-12">
            <div class="card">
              <div class="card-header">
                <h4 class="card-title">List all sales</h4>
                <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                    <div class="heading-elements">
                  <ul class="list-inline mb-0">
                    <li><a data-action="collapse"><i class="icon-minus4"></i></a></li>
                    <li><a data-action="reload"><i class="icon-reload"></i></a></li>
                    <li><a data-action="expand"><i class="icon-expand2"></i></a></li>
                  </ul>
                </div>
              </div>
              <div class="card-body collapse in">
                <div class="card-block">
                  <p>You have following sales</p>
                  <ul class="list-group">
                    <% @weekly_sales.each do |weekly_sale| %>
                      <li class="list-group-item">
                        <h5 class="list-group-item-heading"><%= weekly_sale.start_date %> - <%= weekly_sale.end_date %></h5>
                        <p class="list-group-item-text"><%= weekly_sale.sale %></p>
                        <p class="list-group-item-text"><%= weekly_sale.rent %></p>
                        <p class="list-group-item-text"><%= weekly_sale.cost %></p>
                        <p class="list-group-item-text"><%= weekly_sale.gross_profit %></p>
                        <p class="list-group-item-text"><%= weekly_sale.net_profit %></p>
                        <p class="list-group-item-text">
                          <strong>Documents:</strong>
                          <ul>
                            <% weekly_sale.daily_sale_sheets.each do |daily_sale_sheet| %>
                              <li><%= link_to daily_sale_sheet.blob.filename, url_for(daily_sale_sheet), target: 'blank' %></li>
                            <% end %>
                          </ul>
                        </p>

                      </li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>